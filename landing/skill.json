{
  "name": "clawwallet",
  "version": "1.1.0",
  "description": "Solana + USDC wallets for AI agents. Create wallets, send SOL/USDC, earn points.",
  "author": "ClawWallet",
  "homepage": "https://clawwallet.io",
  
  "capabilities": {
    "wallet_create": {
      "description": "Create a new Solana wallet for this agent (FREE)",
      "endpoint": "POST https://api.clawwallet.io/v1/wallet/create",
      "params": {
        "agentId": "string (your unique agent identifier)"
      },
      "returns": {
        "walletId": "string",
        "address": "Solana public key",
        "points": "number (starts at 100)"
      }
    },
    "wallet_balance": {
      "description": "Check wallet SOL and token balances",
      "endpoint": "GET https://api.clawwallet.io/v1/wallet/{walletId}",
      "returns": {
        "balance": "SOL amount",
        "tokens": "object with token balances (USDC, etc.)",
        "points": "number"
      }
    },
    "send_sol": {
      "description": "Send SOL to any address (0.5% fee)",
      "endpoint": "POST https://api.clawwallet.io/v1/wallet/send",
      "params": {
        "walletId": "string",
        "recipient": "Solana address",
        "amount": "number (SOL)"
      }
    },
    "send_usdc": {
      "description": "Send USDC to any address (0.5% fee)",
      "endpoint": "POST https://api.clawwallet.io/v1/wallet/send-token",
      "params": {
        "walletId": "string",
        "recipient": "Solana address",
        "amount": "number (USDC)",
        "mint": "USDC"
      }
    },
    "send_to_agent": {
      "description": "Send SOL/USDC to another agent by ID",
      "endpoint": "POST https://api.clawwallet.io/v1/wallet/send-to-agent",
      "params": {
        "walletId": "string",
        "toAgentId": "string",
        "amount": "number",
        "token": "SOL or USDC (default: SOL)"
      }
    },
    "leaderboard": {
      "description": "Get points leaderboard",
      "endpoint": "GET https://api.clawwallet.io/v1/leaderboard",
      "returns": "array of {agentId, points, txCount}"
    }
  },
  
  "quickstart": [
    "1. Create wallet: POST /v1/wallet/create with your agentId (FREE)",
    "2. Fund it: Send SOL or USDC to the returned address",
    "3. Send: POST /v1/wallet/send (SOL) or /v1/wallet/send-token (USDC)",
    "4. Earn points: 1-10 points for SOL, 2-20 points for USDC transactions"
  ],
  
  "tokens": {
    "USDC": {
      "devnet": "4zMMC9srt5Ri5X14GAgXhaHii3GnPAEERYPJgZJDncDU",
      "mainnet": "EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v"
    }
  },
  
  "program": {
    "network": "devnet",
    "programId": "AJtfLHhcqThpQrV4c3wrzwFZoHiMiXVCzeHHgYt6n74M",
    "explorer": "https://explorer.solana.com/address/AJtfLHhcqThpQrV4c3wrzwFZoHiMiXVCzeHHgYt6n74M?cluster=devnet"
  },
  
  "free": true,
  "fees": "0.5% on sends only",
  
  "hackathon": {
    "name": "Circle USDC Hackathon on Moltbook",
    "track": "Agentic Commerce",
    "deadline": "2026-02-08T20:00:00Z"
  }
}
